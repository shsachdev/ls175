<h2 class="content-subhead">Search</h2>

<form action="/search" method="get">
  <input name="query" value="<%= params[:query] %>">
  <button type="submit">Search</button>
</form>


<p>
  <% array = @contents.select.with_index do |chap_name, index| %>
    <% File.read("data/chp#{index + 1}.txt").split.include?(@search_term) %>
  <% end %>

  <% if array.empty? %>
    <h2 class="content-subhead">Sorry, no matches were found.</h2>
  <% else %>
    <% array.each_with_index do |chapter, index| %>
      <li class="pure-menu-item">
        <a href="<%="chapters/#{index + 1}"%>" class="pure-menu-link"><%= chapter %></a>
      </li>
    <% end %>
  <% end %>
</p>
